{
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 100,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": true,
                "bracketSpacing": false
            }
        },
        {
            "files": "*.{mjs,js,ts}",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
